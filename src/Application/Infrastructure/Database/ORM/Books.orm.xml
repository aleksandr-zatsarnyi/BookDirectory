<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                     http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Application\Domain\Entity\Books" table="books">
        <id name="id" type="string" column="id">
            <generator strategy="NONE"/>
        </id>
        <field name="title" type="string" length="255" />
        <field name="description" type="text" nullable="true" />
        <field name="imagePath" type="string" length="255" nullable="true" />
        <field name="publicationDate" type="string" length="255"/>

        <many-to-many field="authors" target-entity="App\Application\Domain\Entity\Authors" mapped-by="books">
            <join-table name="book_author">
                <join-columns>
                    <join-column name="book_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="author_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <lifecycle-callbacks>
            <lifecycle-callback type="postLoad" method="postLoad" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>