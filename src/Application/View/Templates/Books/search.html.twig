{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
            body {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
                height: 100vh;
                margin: 0;
                background-color: #c0c0c0;
            }

            .btn {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007BFF;
                color: #fff;
                text-decoration: none;
                border: none;
                border-radius: 5px;
                margin: 10px;
            }

            table {
                width: 50%;
                border-collapse: collapse;
                background-color: #c0c0c0;
            }

            th, td {
                border: 1px solid #000;
                padding: 8px;
                text-align: left;
            }

            th {
                background-color: #007BFF;
                color: #fff;
            }
        </style>
{% endblock %}

{% block body %}
    <a href="{{ path('books_index') }}" class="btn btn-primary" style="position: absolute; top: 10px; left: 10px;">Return to Index</a>
    <h1>Search Results</h1>
     {% if books is empty %}
          <p>Nothing found</p>
     {% else %}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image Path</th>
                <th>Publication Date</th>
                <th>Authors</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.description }}</td>
                    <td>{{ book.imagePath }}</td>
                    <td>{{ book.publicationDate }}</td>
                    <td>
                        <ul>
                            {% for author in book.authors %}
                                <li>{{ author.firstName }} {{ author.secondName }} {{ author.lastName }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}
